{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "target": "es2017",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "system",
    "strictNullChecks": true,
    "jsx": "react",
    "jsxFactory": "h",
    "outFile": "polymer-vdom.js"
  },
  "exclude": [
    "node_modules",
    "wwwroot",
    "bin"
  ],
  "compileOnSave": true
}
